<!DOCTYPE html>
<html>
<head>
	<script src="https://maps.googleapis.com/maps/api/js?v=3.exp"></script>
	<title><%= config.name %> - <%= config.subtitle %></title>

	<link rel="stylesheet" href="styles.css"/>
	<script>
	var map;
	function initialize() {
		var latlon = new google.maps.LatLng(<%= config.lat %>,<%= config.lon %>);

		var mapOptions = {
			zoom: 18,
			center: latlon,
    			disableDefaultUI: true
		};
		map = new google.maps.Map(document.getElementById('map-canvas'),
			mapOptions);
		 var marker = new google.maps.Marker({
      			position: latlon,
      			map: map,
      			title: '<%= config.name %>'
  		});
	}

	google.maps.event.addDomListener(window, 'load', initialize);

	</script>
</head>
<body>
    <div id="seconds" hidden><%= config.timeout %> </div>
    <div id="map-canvas"></div>
	<div id="description">
	<h1>Hello! I'm <%= config.name %></h1>
	<p><%= config.subtitle %>.</p>
	</div>
	<div id="coffeeButton">
		<div id="innerText">
			<%= config.button_text %>
		</div>
	</div>
	<script src="button_script.js"></script>

</body>
</html>

